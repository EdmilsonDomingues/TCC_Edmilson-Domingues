        self.serie=serie            # informativo
        self.disciplinas_turma=disciplinas_turma
        self.slots=slots
        self.ponteiro_geral=ponteiro_geral


class Disciplina():
    def __init__(self):
        self.id_sistema=id_sistema
        self.nome_disciplina=nome_disciplina
        self.grau=grau
        self.serie=serie
        self.creditos=creditos
        self.professores_habilitados=professores_habilitados
        self.ponteiro_geral=ponteiro_geral


class Professor():
    def __init__(self):
        self.id_sistema=id_sistema
        self.nome_professor=nome_professor
        self.aulas_semanais=aulas_semanais
        self.slots=slots
        self.ponteiro_geral=ponteiro_geral


class Slot():
    def __init__(self):
